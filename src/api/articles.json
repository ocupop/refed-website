---
layout: none
title: API - Articles
permalink: api/articles
---
[
{% assign sorted = site.articles | sort: 'item_date'  %}
{% for article in sorted reversed %}
  {
    "layout": {{ article['layout'] | jsonify }},
    "url": {{ article['url'] | jsonify }},
    "title": {{ article['title'] | jsonify }},
    "slug": {{ article['slug'] | jsonify }},
    "item_date": {{ article['item_date'] | date: "%Y-%m-%d" | jsonify }},
    "date": {{ article['date'] | jsonify }},
    "categories": {{ article['categories'] | jsonify }},
    "author": {{ article['author'] | jsonify }},
    "summary": {{ article['summary'] | jsonify }},
    "featured_image": {{ article['featured_image'] | jsonify }},
    "content": {{ article['content'] | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]